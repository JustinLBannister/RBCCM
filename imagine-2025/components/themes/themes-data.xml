<Data>
  <Datum ID="Heading" Type="String" Name="Section Heading"></Datum>
  <Group ID="Theme" Name="Theme" Replicatable="true" CloneGroupID="theme-group">
    <Datum ID="PanelId" Type="String" Name="Panel ID">
      <!-- unique slug e.g. stratified, synthetic, eighth, superpowers, crisis -->
    </Datum>
    <Datum ID="TabLabel" Type="String" Name="Tab Label">
      <!-- text shown on the tab button -->
    </Datum>
    <Datum ID="Title" Type="Textarea" Name="Theme Title">
      <!-- H3 title inside the panel; supports HTML e.g. 8<sup>th</sup> -->
    </Datum>
    <Datum ID="Tagline" Type="String" Name="Tagline">
      <!-- one-line summary -->
    </Datum>
    <Datum ID="ThemeImage" Type="Image" Name="Theme Image">
      <Image Width="600" Height="400">
        <Path/>
        <Description/>
      </Image>
    </Datum>
    <Datum ID="ThemeImageAlt" Type="String" Name="Theme Image Alt Text"></Datum>
    <Datum ID="Body" Type="Textarea" Name="Body Content">
      <!-- rich text paragraphs; HTML allowed -->
    </Datum>
  </Group>
</Data>
